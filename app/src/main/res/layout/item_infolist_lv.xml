<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="15dp">


    <ImageView
        android:id="@+id/item_info_iv"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:src="@drawable/icon_user"
        android:scaleType="fitXY"/>
    <TextView
        android:id="@+id/item_info_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/item_info_iv"
        android:layout_marginTop="3dp"
        android:text="牛奶"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="15sp"/>
    <TextView
        android:id="@+id/item_info_tv_title2"
        android:layout_toRightOf="@+id/item_info_iv"
        android:layout_marginTop="30dp"
        android:text="牛奶2"
        android:layout_marginLeft="10dp"
        android:textStyle="bold"
        android:textSize="20sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:id="@+id/item_info_tv_title3"
        android:layout_alignLeft="@id/item_info_tv_title2"
        android:layout_alignBottom="@id/item_info_iv"
        android:text="title3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/item_info_tv_time"
        android:layout_toRightOf="@+id/item_info_iv"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="100dp"
        android:text="2020:05:06"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <ImageView
        android:id="@+id/item_info_iv_next"
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:src="@drawable/jiantou" />



</RelativeLayout>